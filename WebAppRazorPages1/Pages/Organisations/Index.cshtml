@page
@model WebAppRazorPages1.Pages.Organisations.IndexModel

@{
    ViewData["Title"] = "Index";
    var sl = new List<SelectListItem>();
    sl.Add(new SelectListItem { Text = "startWith" });
    sl.Add(new SelectListItem { Text = "contains" });
    sl.Add(new SelectListItem { Text = "endWith" });

}

<h1>Index</h1>
<a asp-page="Create" type="button" class="btn btn-outline-primary">Create New</a>
<form asp-page-handler="filter">
    Search Direction:@Html.DropDownListFor(f=>f.DirectionSearch, sl)
    Name:<input type="text" asp-for="Filter"/>
    <input type="submit" value="Filter"/>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Organisation[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organisation[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organisation[0].Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Organisation) 
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                        <img src="/icons/edit.png" class="icon" alt="Edit Icon" />
                    </a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="top" title="Details">
                        <img src="/icons/details.png" class="icon" alt="Details Icon" />
                    </a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                        <img src="/icons/delete.png" class="icon" alt="Delete Icon" />
                    </a>
                </td>
            </tr>
    }
    </tbody>
</table>
